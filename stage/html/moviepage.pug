- var pageTitle = 'Moviepage'
include pug/mixins/sideBar
include pug/mixins/articles
include pug/mixins/news

doctype html
html(lang="en")
    head
        include pug/structure/meta
        include pug/structure/styles
    body
        .bg-header
            include pug/components/navbar
            .container
                .row.mt-5
                    .col-lg-3.left
                        include pug/layout/sideBar
                    .col.right
                        +articles(articles, infinite, true)
        +news(news)
        include pug/layout/footer
        include pug/structure/scripts